<div>
  <header>
    <div class="container">
      <div class="row">
        <div class="col-md-9 col-ms-9">
          <a href="#/movies"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a>
          <h1>View</h1>
        </div>
      </div>
     </div>
  </header>
  <div class="container container-main">
    <div class="row">
      <div class="col-md-12 col-ms-12 pg-module">
        <div class="row">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Key</th>
                <th>Value</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Adult</td><td>{{ ctrl.movieInfo.$object.adult}}</td>
              </tr>
              <tr>
                <td>Backdrop Path</td><td>{{ ctrl.movieInfo.$object.backdrop_path}}</td>
              </tr>
              <tr>
                <td>Belogs to Collection</td><td>{{ ctrl.movieInfo.$object.belongs_to_collection.name}}</td>
              </tr>
              <tr>
                <td>Budget</td><td>{{ ctrl.movieInfo.$object.budget | currency : '$' : 0 }}</td>
              </tr>
              <tr>
                <td>Genres</td><td><span ng-repeat="genre in ctrl.movieInfo.$object.genres">{{ genre.name}}<br/></span></td>
              </tr>
              <tr>
                <td>Homepage</td><td><a href="{{ ctrl.movieInfo.$object.homepage }}">{{ ctrl.movieInfo.$object.homepage }}</a></td>
              </tr>
              <tr>
                <td>ID</td><td>{{ ctrl.movieInfo.$object.id }}</td>
              </tr>
              <tr>
                <td>IMDB ID</td><td>{{ ctrl.movieInfo.$object.imdb_id }}</td>
              </tr>
              <tr>
                <td>Original Language</td><td>{{ ctrl.movieInfo.$object.original_language }}</td>
              </tr>
              <tr>
                <td>Original Title</td><td>{{ ctrl.movieInfo.$object.original_title }}</td>
              </tr>
              <tr>
                <td>Overview</td><td>{{ ctrl.movieInfo.$object.overview }}</td>
              </tr>
              <tr>
                <td>Popularity</td><td>{{ ctrl.movieInfo.$object.popularity }}</td>
              </tr>
              <tr>
                <td>Poster Path</td><td>{{ ctrl.movieInfo.$object.poster_path }}</td>
              </tr>
              <tr>
                <td>Production Companies</td><td><span ng-repeat="company in ctrl.movieInfo.$object.production_companies">{{ company.name}}<br/></span></td>
              </tr>
              <tr>
                <td>Production Countries</td><td><span ng-repeat="country in ctrl.movieInfo.$object.production_countries">{{ country.name}}<br/></span></td>
              </tr>
              <tr>
                <td>Release Date</td><td>{{ ctrl.movieInfo.$object.release_date }}</td>
              </tr>
              <tr>
                <td>Revenue</td><td>{{ ctrl.movieInfo.$object.revenue | currency : '$' : 0 }}</td>
              </tr>
              <tr>
                <td>Runtime</td><td>{{ ctrl.movieInfo.$object.runtime }} min</td>
              </tr>
              <tr>
                <td>Spoken Language</td><td><span ng-repeat="language in ctrl.movieInfo.$object.spoken_languages">{{ language.name}}<br/></span></td>
              </tr>
              <tr>
                <td>Status</td><td>{{ ctrl.movieInfo.$object.status }}</td>
              </tr>
              <tr>
                <td>Tagline</td><td>{{ ctrl.movieInfo.$object.tagline }}</td>
              </tr>
              <tr>
                <td>Title</td><td>{{ ctrl.movieInfo.$object.title }}</td>
              </tr>
              <tr>
                <td>Video</td><td>{{ ctrl.movieInfo.$object.video }}</td>
              </tr>
              <tr>
                <td>Vote Average</td><td>{{ ctrl.movieInfo.$object.vote_average }}</td>
              </tr>
              <tr>
                <td>Vote Count</td><td>{{ ctrl.movieInfo.$object.vote_count }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>