<div>
  <header>
    <div class="container">
      <div class="row">
        <div class="col-md-9 col-ms-9">
          <a href="#/movies"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a>
          <h1>Search</h1>
        </div>
      </div>
     </div>
  </header>
  <div class="container container-main">
    <div class="row">
      <div class="col-md-12 col-ms-12 pg-module">
        <div class="row">
          <form class="form-inline" role="form">
            <div class="form-group">
              <label>Movie Name</label>
              <input type="text" class="form-control" ng-model="ctrl.query" placeholder="Enter name">
              <button type="button" class="btn btn-info" ng-click="ctrl.searchTmdb()">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
              </button>
            </div>
            <div class="form-group pull-right" ng-show="ctrl.movies.length">
              {{ ctrl.movies.length }} movies found
            </div>
          </form>
        </div>
        <div class="row">
          <table class="table table-striped">
            <tr>
              <th>Title</th>
              <th>Poster</th>
            </tr>
            <tr ng-repeat="movie in ctrl.movies" ng-click="ctrl.getInfo(movie)">
              <td>{{ movie.title }}</td>
              <td><img ng-src="{{ ctrl.getPosterUrl(movie.poster_path,2) }}"/></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>